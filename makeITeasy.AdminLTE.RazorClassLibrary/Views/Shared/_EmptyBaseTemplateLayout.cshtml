@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@inject makeITeasy.AdminLTE.RazorClassLibrary.Models.PageDefinition pageDefinition
@inject makeITeasy.AdminLTE.RazorClassLibrary.Models.ISiteDefinition webSiteDefinition
@using makeITeasy.AdminLTE.RazorClassLibrary.Models
<!DOCTYPE html>

<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>@pageDefinition.Title</title>
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Source+Sans+Pro:300,400,400i,700&display=fallback">

    <link rel="stylesheet" href="/_content/makeITeasy.AdminLTE.RazorClassLibrary/dist/css/adminlte.min.css" asp-append-version="true"/>
    @RenderSection("Style", required: false)
</head>
<body class="hold-transition empty-page">

    @RenderBody()

    <script src="/_content/makeITeasy.AdminLTE.RazorClassLibrary/dist/js/adminlte.min.js" asp-append-version="true"></script>
    <script>
        $( document ).ready(function() {
        });
    </script>
    @RenderSection("Scripts", required: false)
</body>
</html>
